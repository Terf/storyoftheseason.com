{% extends 'base.html.twig' %}
{% block title %}
Password reset
{% endblock %}
{% block styles %}
html,
body {
height: 100%;
}

body {
display: -ms-flexbox;
display: flex;
-ms-flex-align: center;
align-items: center;
padding-top: 40px;
padding-bottom: 40px;
background-color: #f5f5f5;
}

.form-signin {
width: 100%;
max-width: 330px;
padding: 15px;
margin: auto;
}
.form-signin .form-control {
position: relative;
box-sizing: border-box;
height: auto;
padding: 10px;
font-size: 16px;
}
.form-signin .form-control:focus {
z-index: 2;
}
.form-signin input[type="email"] {
margin-bottom: -1px;
border-bottom-right-radius: 0;
border-bottom-left-radius: 0;
}
{% endblock %}
{% block body %}
<form class="form-signin text-center" action="{{ path('new-password-submit') }}" method="POST">
    <img class="mb-4" src="/images/logo.jpg" alt="" height="72">
    <h1 class="h3 mb-3 font-weight-normal">Reset password</h1>
    <label for="password" class="sr-only">New password</label>
    <input type="password" id="password" name="password" pattern=".{9,}" required title="9 characters minimum" class="form-control" placeholder="New password" required=""
        autofocus="">
    <input type="hidden" name="token" value="{{app.request.get('token')}}">
    <button class="btn btn-lg btn-primary btn-block mt-2" type="submit">Reset</button>
    <p class="mt-5 mb-3 text-muted">&copy; {{ "now"|date("Y") }}</p>
</form>

{% endblock %}