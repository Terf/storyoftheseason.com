<form action="{{ path('registration-submit') }}" method="POST">
    <div class="form-row">
        <div class="col form-group">
            <label for="fname">First name</label>
            <input type="text" class="form-control" placeholder="First name" id="fname" name="fname">
        </div>
        <div class="col form-group">
            <label for="lname">Last name</label>
            <input type="text" class="form-control" placeholder="Last name" id="lname" name="lname">
        </div>
    </div>
    <div class="form-row">
        <div class="col form-group">
            <label for="addr">Address</label>
            <input type="text" class="form-control" placeholder="Address" id="addr" name="addr">
        </div>
        <div class="col form-group">
            <label for="zip">Zip code</label>
            <input type="text" class="form-control" placeholder="Zip code" id="zip" name="zip">
        </div>
    </div>
    <div class="form-row">
        <div class="col form-group">
            <label for="state">State</label>
            <input type="text" class="form-control" placeholder="State" id="state" name="state">
        </div>
        <div class="col form-group">
            <label for="country">Country</label>
            <input type="text" class="form-control" placeholder="Country" id="country" name="country">
        </div>
    </div>
    <div class="form-row">
        <div class="col form-group">
            <label for="relationship">Relationship to program</label>
            <select class="custom-select" name="relationship" id="relationship">
                <option selected>Relationship to program</option>
                <option value="1">Parent</option>
                <option value="2">Player</option>
                <option value="3">Alumni</option>
                <option value="3">Student</option>
            </select>
        </div>
        <div class="col form-group">
            <label for="email">Email</label>
            <input type="email" class="form-control" placeholder="Email" id="email" name="email">
        </div>
    </div>
    <div class="form-row">
        <div class="col form-group">
            <label for="student">Name of student who sold subscription</label>
            <input type="text" class="form-control" placeholder="Name of student" id="student" name="student">
        </div>
        <div class="col form-group">
            <label for="studentRelationship">Student relationship</label>
            <select class="custom-select" name="studentRelationship" id="studentRelationship">
                <option selected>Relationship to program</option>
                <option value="1">Player</option>
                <option value="3">Band member</option>
                <option value="3">Cheerleader</option>
            </select>
        </div>
    </div>
    <div class="form-row">
        <div class="col form-group">
            <label for="pass">Password</label>
            <input type="password" class="form-control" placeholder="Password" id="pass" name="pass">
        </div>
        <div class="col form-group">
            <label for="phone">Phone number</label>
            <input type="text" class="form-control" placeholder="Phone number" id="phone" name="phone">
        </div>
    </div>
    <div class="form-row">
        <div class="col form-group">
            <div class="custom-control custom-checkbox">
                <input type="checkbox" class="custom-control-input" id="terms" name="terms"
                    onclick="document.getElementById('register-btn').toggleAttribute('disabled');">
                <label class="custom-control-label" for="terms">By purchasing a subscription and creating an account
                    with storyit, you agree to the terms and conditions.</label>
            </div>
        </div>
    </div>
    <div class="form-row">
        <div class="col form-group">
            <input type="hidden" name="product" value="{{product.id}}">
            <button id="register-btn" type="submit" class="btn btn-outline-primary" disabled>Submit</button>
        </div>
    </div>
</form>