{% extends 'base.html.twig' %}
{% block title %}
Registration Form
{% endblock %}
{% block body %}
{% include 'navbar.html.twig' %}
<div class="container">
    <h2 class="text-center mt-4 mb-4">Story of the Season registration</h2>
    <form action="{{ path('registration-submit') }}" method="POST">
        {% include 'registration/form.html.twig' %}
        <div class="form-row">
            <div class="col form-group">
                <button id="register-btn" type="submit"
                    class="btn btn-outline-primary" disabled>Submit</button>
            </div>
        </div>
    </form>
</div>
{% endblock %}