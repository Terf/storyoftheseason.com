{% set route = path(app.request.attributes.get('_route')) %}
<nav class="navbar navbar-expand-lg navbar-light bg-light sticky-top mb-4 shadow-lg">
  <a class="navbar-brand" href="{{ path('index') }}"><img src="/images/logo.jpg" height="30" alt=""></a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav"
    aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item {% if route == path('index') %}active{% endif %}">
        <a class="nav-link" href="{{ path('index') }}">Home</a>
      </li>
      <li class="nav-item {% if route == path('shop') %}active{% endif %}">
        <a class="nav-link" href="{{ path('shop') }}">Subscribe to your team</a>
      </li>
      <li class="nav-item {% if route == path('upload-form') %}active{% endif %}">
        <a class="nav-link" href="{{ path('upload-form') }}">Upload to your story</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="https://storyoftheseason.kitaboo.com/">Read Story of the Season</a>
      </li>
    </ul>
    {% if app.request.cookies.get('user_token') == null %}
    <ul class="navbar-nav {% if route == path('login-form') %}active{% endif %}">
      <li class="nav-item float-right">
        <a class="nav-link" href="{{ path('login-form') }}">Login</a>
      </li>
    </ul>
    {% else %}
    <ul class="navbar-nav">
      <li class="nav-item float-right">
        <a class="nav-link" href="{{ path('sign-out') }}">Sign out</a>
      </li>
    </ul>
    {% endif %}
  </div>
</nav>